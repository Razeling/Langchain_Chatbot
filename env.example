# Core
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-1106-preview
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_TEMPERATURE=0.1

# Vector store
VECTOR_STORE_TYPE=chroma
VECTOR_STORE_PATH=./data/vector_store
EMBEDDING_DIMENSION=1536

# RAG
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
RETRIEVAL_K=5
SIMILARITY_THRESHOLD=0.6

# Rate limiting
RATE_LIMIT_REQUESTS=30
RATE_LIMIT_WINDOW=900

# CORS / Hosts
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","0.0.0.0"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=1 week

# Security
SECRET_KEY=please-change-me-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Function calling
ENABLE_FUNCTION_CALLING=true
FUNCTION_TIMEOUT=30

# Streaming
ENABLE_STREAMING=true
STREAM_TIMEOUT=60

# Web search
ENABLE_WEB_SEARCH=true
WEB_SEARCH_TIMEOUT=30
WEB_SEARCH_MAX_RESULTS=3
WEB_SEARCH_MIN_KB_RESULTS=2

# Intelligent learning
ENABLE_INTELLIGENT_LEARNING=true
LEARNED_CONTENT_THRESHOLD=0.5
TECHNICAL_QUERY_MIN_RESULTS=2
GENERAL_QUERY_MIN_RESULTS=1
PRIORITIZE_LEARNED_CONTENT=true
MAX_LEARNED_DOCS_PER_QUERY=3

# Knowledge relevancy tuning
HIGH_CONFIDENCE_THRESHOLD=0.75
MEDIUM_CONFIDENCE_THRESHOLD=0.6
LOW_CONFIDENCE_THRESHOLD=0.4


